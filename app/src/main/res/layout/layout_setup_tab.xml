<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="16dp"
              android:weightSum="1">
    <TextView android:id="@+id/tv_tab_spots" android:layout_width="0dp" android:layout_height="wrap_content"
              android:layout_weight="0.5"
              android:textAlignment="center"
              android:textSize="16dp"
              android:text="@string/setting_tab_registered"/>
    <View android:layout_width="1px" android:layout_height="match_parent" android:background="#ededed" />
    <TextView android:id="@+id/tv_tab_insert_update" android:layout_width="0dp"
              android:layout_height="wrap_content" android:layout_weight="0.5"
              android:textAlignment="center"
              android:textSize="16dp"
              android:text="@string/setting_tab_save"/>
</LinearLayout>