<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.main.MainActivity">

    <LinearLayout android:id="@+id/ll_main_container" android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="horizontal"
                  android:layout_marginStart="8dp"
                  android:layout_marginEnd="8dp" android:layout_marginTop="16dp"
                  android:layout_above="@id/include">
    </LinearLayout>

    <include android:layout_height="wrap_content" android:layout_width="match_parent" layout="@layout/layout_menu_tab"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             android:layout_alignParentBottom="true"
             android:id="@+id/include"/>
</RelativeLayout>