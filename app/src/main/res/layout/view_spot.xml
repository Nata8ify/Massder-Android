<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="16dp">
    <TextView android:id="@+id/tv_spot_tale" android:layout_width="match_parent" android:layout_height="wrap_content"
              android:textSize="16dp"
              android:textStyle="bold"
              android:textAlignment="center"
              android:text="$Tale"/>
    <TextView android:id="@+id/tv_spot_description" android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textSize="12dp"
              android:textStyle="normal"
              android:layout_marginTop="8dp"
              android:textAlignment="center"
              android:text="$Description"/>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:layout_marginTop="12dp"
                  android:orientation="horizontal" android:weightSum="0.99">
        <TextView android:id="@+id/tv_spot_latlng" android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textSize="8dp"
                  android:textStyle="italic"
                  android:text="$LatLng"
                  android:textAlignment="center"
                  android:layout_weight="0.33"/>
        <View android:layout_width="1px" android:layout_height="match_parent" android:background="#ededed"/>
        <TextView android:id="@+id/tv_spot_status" android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textSize="8dp"
                  android:textStyle="italic"
                  android:text="$Status"
                  android:textAlignment="center"
                  android:layout_weight="0.33"/>
        <View android:layout_width="1px" android:layout_height="match_parent" android:background="#ededed"/>
        <TextView android:id="@+id/tv_spot_timestamp" android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textSize="8dp"
                  android:textStyle="italic"
                  android:text="$Timestamp"
                  android:textAlignment="center"
                  android:layout_weight="0.33"/>

    </LinearLayout>
</LinearLayout>